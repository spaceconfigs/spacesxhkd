  google-chrome-stable

Super_L ; space ; f ; e ; R
  killall -s SIGUSR1 sxhkd

Super_L ; space ; q ; q
  shutdown -h now

Super_L ; space ; w ; {d, m}
  i3-msg {kill, fullscreen toggle}

super + control {h , l}
  i3-msg "workspace {previous, next}"

super {control + shift} + {h, l}
  i3-msg {move container to workspace} {prev_on_output, next_on_output} 

super {_,+ control + shift} + {0-9}
  i3-msg {workspace, move container to workspace} {0-9} 

super + control + shift + {l,h}
  i3-msg "move workspace to output {left,right}"

Print {_,+ shift}
  scrot {_,-s}

