XF86AudioRaiseVolume
  pactl set-sink-volume 0 +5%
XF86AudioLowerVolume
  pactl set-sink-volume 0 -5%
XF86AudioMute
  pactl set-sink-mute 0 toggle

XF86MonBrightnessUp
  notify-send "up"
XF86MonBrightnessDown
  notify-send "down"

XF86AudioPlay
  playerctl play-pause
XF86AudioPause
  playerctl play-pause
XF86AudioNext
  playerctl next
XF86AudioPrev
  playerctl previous

super + Tab
  i3-msg "workspace back_and_forth"

super + space
  dmenu_run -l 10 

super {0-9}
  i3-msg workspace {0-9} 

control {Left, Right}
  i3-msg "focus {left, right}"

super + control {h , l}
  i3-msg "workspace {prev, next}"

super + control + shift {0-9, h, l}
  WORKSPACE={0-9,prev,next}; \
  i3-msg "move window to workspace $WORKSPACE"; \
  i3-msg "workspace $WORKSPACE"

Print {_,+ shift}
  scrot {_,-s}

Print + {_,shift +} control
  scrot {-e, -s -e} 'xclip -selection clipboard -t image/png -i $f; rm $f'

Super_L ; apostrophe
  alacritty

Super_R ; a ; w
  qutebrowser

Super_R ; f ; e ; d
  alacritty --command nvim ~/.config/sxhkd/sxhkdrc

Super_R ; f ; e ; R
  killall -s SIGUSR1 sxhkd; \
  i3-msg reload; \
  i3-msg restar

Super_L ; i ; P ; {P}
  {passmenu}
 
Super_R ; q ; {Q,R}
  shutdown -{h,r} now

Super_R ; w ; {d, m}
  i3-msg {kill, fullscreen toggle}
  
Super_R ; w ; p ; P
  dunstctl close-all
