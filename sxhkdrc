super + Tab
  i3-msg "workspace back_and_forth"

super + space
  dmenu_run -l 10 

super {0-9}
  i3-msg workspace {0-9} 

super {h, l}
  i3-msg "focus {left, right}"

super + control {h , l}
  i3-msg "workspace {prev, next}"

super + control + shift {0-9, h, l}
  WORKSPACE={0-9,prev,next}; \
  i3-msg "move window to workspace $WORKSPACE"; \
  i3-msg "workspace $WORKSPACE"

Print {_,+ shift}
  scrot {_,-s}

Print + {_,shift +} control
  scrot {-e, -s -e} 'xclip -selection clipboard -t image/png -i $f; rm $f'

Super_L ; space ; apostrophe
  alacritty

Super_L ; space ; a ; w
  qutebrowser

Super_L ; space ; f ; e ; d
  alacritty --command nvim ~/.config/sxhkd/sxhkdrc

Super_L ; space ; f ; e ; R
  killall -s SIGUSR1 sxhkd; \
  i3-msg reload; \
  i3-msg restar

Super_L ; space ; i ; P ; {P}
  {passmenu}
 
Super_L ; space ; q ; {q,R}
  shutdown -{h,r} now

Super_L ; space ; w ; {d, m}
  i3-msg {kill, fullscreen toggle}
  
Super_L ; space ; w ; p ; P
  dunstctl close-all
